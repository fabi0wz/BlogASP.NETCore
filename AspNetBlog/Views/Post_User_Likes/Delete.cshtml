@model AspNetBlog.Models.Post_User_Likes

@{
    ViewData["Title"] = "Delete";
}

<form asp-action="Delete" asp-controller="Post_User_Likes" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @Html.HiddenFor(model => model.Post.Post_Id) <!-- Assuming this is your post id -->

    <!-- Add a hidden input for the postId -->
    <input type="hidden" name="postId" value="@Model.Post.Post_Id" />

    <button type="submit" class="btn">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="red" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
        </svg>
        Post Liked!
    </button>
</form>
