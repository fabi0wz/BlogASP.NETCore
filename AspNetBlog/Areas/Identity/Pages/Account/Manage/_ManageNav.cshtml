@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="drawer lg:drawer-open">
    <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col items-center justify-center">
        <!-- Page content here -->
        <label for="my-drawer-2" class="btn btn-primary drawer-button lg:hidden">Open drawer</label>

    </div>
    <div class="drawer-side">
        <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="menu p-4 w-80 min-h-full text-base-content">
            <!-- Sidebar content here -->
            <li class="px-2 py-1 text-blue-500 hover:text-blue-700"><a class="text-blue-500 hover:underline hover:text-blue-700 @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
            <li class="px-2 py-1 text-blue-500 hover:text-blue-700"><a class="text-blue-500 hover:underline hover:text-blue-700 @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
            <li class="px-2 py-1 text-blue-500 hover:text-blue-700"><a class="text-blue-500 hover:underline hover:text-blue-700 @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>
            <li class="px-2 py-1 text-blue-500 hover:text-blue-700"><a class="text-blue-500 hover:underline hover:text-blue-700 @ManageNavPages.ViewPostsUserNavClass(ViewContext)" id="blogs" asp-page="./ViewPostsUser">Blogs</a></li>
            @if (hasExternalLogins)
            {
                <li id="external-logins" class="px-2 py-1 text-blue-500 hover:text-blue-700"><a id="external-login" class="text-blue-500 hover:underline hover:text-blue-700 @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
            }
        </ul>

    </div>
</div>
<ul class="nav nav-pills flex-column">
    
</ul>
