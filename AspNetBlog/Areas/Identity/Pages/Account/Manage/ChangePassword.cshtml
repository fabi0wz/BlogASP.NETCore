@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="block text-green-500 text-sm font-bold mb-2">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="flex">
    <div class="w-1/2">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
            <div class="relative mb-3">
                <input asp-for="Input.OldPassword" class="w-60 px-1 py-2 leading-tight text-neutral-50 border rounded focus:outline-none focus:shadow-outline" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
                <label asp-for="Input.OldPassword" class="block text-green-500 text-sm font-bold mb-2"></label>
                <span asp-validation-for="Input.OldPassword" class="text-red-500"></span>
            </div>
            <div class="relative mb-3">
                <input asp-for="Input.NewPassword" class="w-60 px-1 py-2 leading-tight text-neutral-50 border rounded focus:outline-none focus:shadow-outline" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
                <label asp-for="Input.NewPassword" class="block text-green-500 text-sm font-bold mb-2"></label>
                <span asp-validation-for="Input.NewPassword" class="text-red-500"></span>
            </div>
            <div class="relative mb-3">
                <input asp-for="Input.ConfirmPassword" class="w-60 px-1 py-2 leading-tight text-neutral-50 border rounded focus:outline-none focus:shadow-outline" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
                <label asp-for="Input.ConfirmPassword" class="block text-green-500 text-sm font-bold mb-2"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500"></span>
            </div>
            <button type="submit" class="btn btn-warning">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
