@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="block text-green-500 text-sm font-bold mb-2">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="flex flex-wrap">
    @if (!string.IsNullOrEmpty(Model.Input.ProfilePictureUrl))
    {
        <div class="w-full md:w-1/3 p-4">
            <img src="/uploads/@Model.Input.ProfilePictureUrl" class="w-64 h-80" alt="Profile Picture">
        </div>
    }
    <div class="w-full md:w-2/3 p-4">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
                <label for="Username" class="block text-green-500 text-sm font-bold mb-2">Username</label>
                <input asp-for="Username" class="w-60 px-1 py-2 leading-tight text-neutral-50 border rounded focus:outline-none focus:shadow-outline" placeholder="Please choose your username." disabled />
            </div>
            <div class="mb-3">
                <label for="Input.PhoneNumber" class="block text-green-500 text-sm font-bold mb-2">Phone Number</label>
                <input asp-for="Input.PhoneNumber" class="w-60 px-1 py-2 leading-tight text-neutral-50 border rounded focus:outline-none focus:shadow-outline" placeholder="Please enter your phone number." />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Input.Description" class="block text-green-500 text-sm font-bold mb-2">Description</label>
                <input asp-for="Input.Description" class="w-60 px-1 py-2 leading-tight text-neutral-50 border rounded focus:outline-none focus:shadow-outline" placeholder="Please enter your Description." />
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Input.ImageFile" class="block text-green-500 text-sm font-bold mb-2">Profile Picture</label>
                <input asp-for="Input.ImageFile" type="file" class="file-input file-input-bordered file-input-success w-full max-w-xs" />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
